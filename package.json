{
  "name": "pdf2html-client",
  "version": "0.1.3",
  "description": "Advanced client-side PDF to HTML converter with WASM parsing, OCR support, and intelligent text layout reconstruction. Perfect for document management systems and web applications.",
  "type": "module",
  "main": "./dist/index.umd.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:pdfs": "playwright test tests/browser/pdf-conversion.spec.ts",
    "test:boarding-pass": "playwright test tests/browser/boarding-pass.spec.ts --workers=1",
    "test:source-agreement": "playwright test tests/browser/source-agreement.spec.ts --workers=1",
    "test:pdfs:headed": "playwright test tests/browser/pdf-conversion.spec.ts --headed",
    "test:pdfs:debug": "playwright test tests/browser/pdf-conversion.spec.ts --debug",
    "analyze-pdf": "node scripts/analyze-pdf.js",
    "test:browser": "playwright test",
    "test:browser:ui": "playwright test --ui",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit",
    "demo": "vite --config vite.demo.config.ts",
    "publish:npm": "node scripts/publish-npm.mjs",
    "download-models": "node scripts/download-models.cjs",
    "update-font-db": "node scripts/update-font-metrics-db.cjs",
    "update-font-metrics-db": "node scripts/update-font-metrics-db.cjs",
    "postinstall": "node scripts/postinstall.cjs",
    "pdf2html:setup-models": "node scripts/postinstall.cjs"
  },
  "keywords": [
    "pdf",
    "pdf-converter",
    "pdf-to-html",
    "html",
    "ocr",
    "wasm",
    "client-side",
    "font-mapping",
    "document-processing",
    "text-extraction",
    "layout-analysis",
    "semantic-html",
    "pdfium",
    "unpdf",
    "typescript",
    "browser",
    "webassembly",
    "document-conversion",
    "pdf-parser",
    "text-layout",
    "scanned-pdf",
    "font-detection",
    "pdf2html",
    "pdf-to-html-converter",
    "pdf-converter-library",
    "pdf-processing",
    "pdf-analysis",
    "pdf-ocr",
    "pdf-text-extraction",
    "pdf-layout-analysis",
    "pdf-semantic-html"
  ],
  "author": "PDF2HTML Contributors",
  "license": "MIT",
  "homepage": "https://github.com/VenMail/pdf2html-client#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VenMail/pdf2html-client.git"
  },
  "bugs": {
    "url": "https://github.com/VenMail/pdf2html-client/issues"
  },
  "dependencies": {
    "@embedpdf/pdfium": "^1.5.0",
    "@napi-rs/canvas": "^0.1.84",
    "@techstark/opencv-js": "^4.11.0-release.1",
    "jsdom": "^27.3.0",
    "onnxruntime-web": "^1.22.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "5.4.296",
    "unpdf": "^1.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/fontkit": "^2.0.8",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "fontkit": "^2.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
